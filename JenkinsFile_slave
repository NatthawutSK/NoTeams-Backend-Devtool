pipeline {
    agent any
        environment {
            DOCKER_CONTAINER_NAME_BACKEND = "backend-server"
            DOCKER_IMAGE_NAME_BACKEND     = "fixfireza/noteams-backend-devtool:2.0"
        }


        stages {
            stage('Initialize Stage') {
                steps {
                    echo 'we are initializing bro ;-;'
                    echo 'Initial : Delete containers and images'
                    sh 'docker stop ${DOCKER_CONTAINER_NAME_BACKEND} || true'
                    sh 'docker rm ${DOCKER_CONTAINER_NAME_BACKEND} || true'
                    sh 'docker rmi ${DOCKER_IMAGE_NAME_BACKEND} || true'
                }
            }

            stage('Pull Stage') {
                steps {
                    echo 'we are pulling image bro ;-;'
                    dir('Noteams') {
                        echo "Current path is ${pwd()}"
                        sh "docker pull ${DOCKER_IMAGE_NAME_BACKEND}"
                    }
                }
            }

            stage('Run Stage') {
                steps {
                echo 'we are running the image that i just pulled bro ;-;'
                    dir('Noteams') {
                        echo "Current path is ${pwd()}"
                        sh "docker run --name ${DOCKER_CONTAINER_NAME_BACKEND} -d -p 3000:3000 -v ~/.config/gcloud:/root/.config/gcloud ${DOCKER_IMAGE_NAME_BACKEND}"
                    }
                }
            }
        
        }
}